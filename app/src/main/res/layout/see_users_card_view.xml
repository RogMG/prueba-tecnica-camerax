<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/see_user_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/see_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/see_email_view"
            app:layout_constraintStart_toEndOf="@+id/see_user_image_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/see_email_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/see_birth_date_view"
            app:layout_constraintStart_toEndOf="@+id/see_user_image_view"
            app:layout_constraintTop_toBottomOf="@+id/see_name_view" />

        <TextView
            android:id="@+id/see_birth_date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Nacimiento:"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/see_age_view"
            app:layout_constraintStart_toEndOf="@+id/see_user_image_view"
            app:layout_constraintTop_toBottomOf="@+id/see_email_view" />

        <Button
            android:id="@+id/see_information_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Ver InformaciÃ³n"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/see_user_image_view" />

        <TextView
            android:id="@+id/see_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/see_name_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/see_name_view"
            tools:text="Rogelio Martinez Gonzalez" />

        <TextView
            android:id="@+id/see_email_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/see_email_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/see_email_view"
            tools:text="roger4567.rm@gmail.com" />

        <TextView
            android:id="@+id/see_birth_date_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/see_birth_date_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/see_birth_date_view"
            tools:text="1999-12-11" />

        <TextView
            android:id="@+id/see_age_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Edad:"
            app:layout_constraintBottom_toTopOf="@+id/see_information_button"
            app:layout_constraintStart_toEndOf="@+id/see_user_image_view"
            app:layout_constraintTop_toBottomOf="@+id/see_birth_date_view" />

        <TextView
            android:id="@+id/see_age_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:text="23"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/see_age_view"
            app:layout_constraintStart_toEndOf="@+id/see_age_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>